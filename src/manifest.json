{
  "manifest_version": 3,
  "background": {
    "service_worker": "backgroundScript.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["contentScript.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "action": { "default_popup": "pages/popup/popup.html" },
  "chrome_url_overrides": {
    "bookmarks": "pages/main/main.html"
  },
  "permissions": ["bookmarks", "tabs"]
}
