{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom","DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2024"
  },
  "include": ["./src/**/*", "drizzle.config.ts"],
  "exclude": ["./node_modules/*"]
}
