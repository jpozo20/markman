{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom","DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2024",
    "baseUrl": "./src",
    "paths": {
      "@store/*": ["./App/store/*"],
      "@services/*": ["./App/services/*"],
      "@drizzle/*": ["../drizzle/*"],

      "@modules/*": ["./App/modules/*"],
      "@bookmarks/*":["./App/modules/bookmarks/*"],
      "@database/*": ["./App/services/database/*"],
      
    }
  },
  "include": ["./src/**/*", "drizzle.config.ts", "drizzle.migrator.ts"],
  "exclude": ["./node_modules/*"]
}
